{
  "name": "fullstack-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Production-quality monorepo for AI-driven full-stack web application scaffolding",
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,yml,yaml}\"",
    "agent:generate": "node agent/dist/cli.js"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.0",
    "turbo": "^1.12.0",
    "prettier": "^3.2.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
